<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="Encrypto.UI.MainWindow"
        mc:Ignorable="d"
        Title="Encrypto"
        Width="400" Height="300"
        DragDrop.AllowDrop="True"
        DragDrop.Drop="OnDrop">
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Drag &amp; drop a folder to encrypt or a .crypt file to decrypt" TextWrapping="Wrap"/>
        <TextBox x:Name="PasswordBox" Watermark="Password" PasswordChar="*"/>
        <StackPanel Orientation="Horizontal" Spacing="10">
            <Button Content="Encrypt Folder..." Click="Encrypt_Click"/>
            <Button Content="Decrypt File..." Click="Decrypt_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
